@{
    ViewBag.Title = "EditPassword";
    Layout = ViewBag.layout;
}
<form method="post">
    <div class="row">
        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger" role="alert">@ViewBag.error</div>
        }
        @if (ViewBag.success != null)
        {
            <div class="alert alert-success" role="alert">@ViewBag.success</div>
        }
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-group">
                <label for="" class="form-label">Mật khẩu cũ</label>
                <input type="password" class="form-control form-control-user" placeholder="Mật khẩu cũ" name="passOld">
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-group">
                <label for="" class="form-label">Mật khẩu mới</label>
                <input type="password" class="form-control form-control-user" placeholder="Mật khẩu mới" name="passNew">
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-group">
                <label for="" class="form-label">Xác nhận mật khẩu mới</label>
                <input type="password" class="form-control form-control-user" placeholder="Xác nhận mật khẩu mới" name="confirmPass">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="form-group">
                <button class="btn btn-success" type="submit">Thay đổi</button>
            </div>
        </div>
    </div>
</form>